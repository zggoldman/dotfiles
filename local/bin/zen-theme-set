#!/bin/bash

if [[ -z $1 ]]; then
  echo "Usage: zen-theme-set <theme-name>"
  exit 1
fi

CURRENT_THEME_PATH="$HOME/.config/zenvironment/current/theme"
NEXT_THEME_PATH="$HOME/.config/zenvironment/current/next-theme"
THEMES_PATH="$HOME/dotfiles/themes"

THEME_NAME=$(echo "$1" | sed -E 's/<[^>]+>//g' | tr '[:upper:]' '[:lower:]' | tr ' ' '-')

if [[ -d "$THEMES_PATH/$THEME_NAME" ]]; then
  THEME_PATH="$THEMES_PATH/$THEME_NAME"
else
  echo "Theme '$THEME_NAME' does not exist"
  exit 1
fi

# Setup clean next theme directory (for atomic theme config swapping)
rm -rf "$NEXT_THEME_PATH"
mkdir -p "$NEXT_THEME_PATH"

# Copy static configs
cp -r "$THEME_PATH/"* "$NEXT_THEME_PATH/" 2>/dev/null

# Generate dynamic configs
zen-theme-set-templates

# Swap next theme in as current
rm -rf "$CURRENT_THEME_PATH"
mv "$NEXT_THEME_PATH" "$CURRENT_THEME_PATH"

# Store theme name for reference
echo "$THEME_NAME" > "$HOME/.config/zenvironment/current/theme.name"
